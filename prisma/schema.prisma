// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String    @unique
  password  String?   // Optional untuk OAuth users
  googleId  String?   @unique // Google OAuth ID
  provider  String?   @default("email") // 'email' atau 'google'
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  presets   Preset[] // Relasi ke presets

  @@map("users")
}

model Preset {
  id        String   @id @default(cuid())
  name      String
  userId    String
  folder    String?  // Folder untuk organisasi preset per user
  isPublic  Boolean  @default(false) // false = private, true = published
  settings  Json     // Store preset settings as JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isPublic])
  @@index([userId, folder])
  @@map("presets")
}
